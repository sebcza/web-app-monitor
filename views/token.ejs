        <% include ./partials/header %>
   <section class="content">
    <div class="row">
     <h2>Zużycie procesora</h2>
      <div data-bind="progress: cpu">
      </div>        
    </div>
    
     <div class="row">
     <h2>Zużycie pamięci</h2>
      <div style="font-size:24px;">
      <span data-bind="text:memory"></span> 
      <span> Gb</span>
      </div>        
    </div>   


    <div class="col-md-12">
       <h2>Security Tokens</h2>
       <button data-bind="click: showNewTokenModal" class="btn btn-lg btn-success">Add</button>
        <table class="table">
          <tr>
              <th>Username</th>
              <th>Token</th>
              <th>Action</th>
          </tr>
          <tbody data-bind="foreach:tokens">
              <tr>
                  <td data-bind="text:$data.name"></td>
                  <td data-bind="text:$data.token"></td>
                  <td> <button data-bind="click:$parent.deleteToken" class="btn btn-default">Delete</button></td>
              </tr>             
          </tbody>

        </table>        
    </div>
</section>

<div id="newToken" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">New Token</h4>
      </div>
      <div class="modal-body">
          <div class="form-group">
            <label for="exampleInputEmail1">Name</label>
            <input data-bind="value: name" type="text" class="form-control" placeholder="Enter name">
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1">Token</label>
            <input data-bind="value: token" type="text" class="form-control" placeholder="Enter token">
          </div>          
          
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button data-bind="click:addToken" type="button" class="btn btn-primary">Save</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->


